<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="center" hgap="10" maxHeight="1000.0" maxWidth="500.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <FlowPane prefHeight="800.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="802.0" prefWidth="500.0">
               <children>
                  <Label text="Label" />
                  <ComboBox fx:id="LabelOptions" onAction="#selectSandwich" prefHeight="38.0" prefWidth="201.0" />
                  <ImageView fx:id="ImageBox" fitHeight="257.0" fitWidth="367.0" pickOnBounds="true" preserveRatio="true" />
                  <HBox prefHeight="301.0" prefWidth="500.0">
                     <children>
                        <ListView fx:id="toppingsList" prefHeight="301.0" prefWidth="231.0" />
                        <VBox prefHeight="301.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="addButton" mnemonicParsing="false" onAction="#add" text="Add" />
                              <Button fx:id="removeTopping" mnemonicParsing="false" onAction="#remove" prefHeight="25.0" prefWidth="90.0" text="Remove" />
                           </children>
                        </VBox>
                        <ListView fx:id="selectedToppingsList" prefHeight="154.0" prefWidth="381.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="173.0" prefWidth="500.0">
                     <children>
                        <Label text="Label" />
                        <TextField fx:id="priceLabel" />
                     </children>
                  </HBox>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" text="Submit" />
                  <Button mnemonicParsing="false" onAction="#newStage" text="Button" />
               </children>
            </VBox>
         </children>
      </FlowPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
